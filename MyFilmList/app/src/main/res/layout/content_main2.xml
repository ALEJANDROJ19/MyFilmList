<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pr_idi.mydatabaseexample.activity.Main2Activity"
    tools:showIn="@layout/app_bar_main2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/colorPrimary"
        android:id="@+id/ly_filter_bar"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:id="@+id/iv_filter_button_back"
            android:layout_weight="0.1"
            android:clickable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_filter_title"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:layout_marginLeft="25dp"
            tools:text="Protagonista: Nanoha-chan"
            android:textColor="@color/button_material_light"
            android:gravity="center_vertical"
            android:maxLines="1" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
    android:id="@+id/llista_pelicules"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"


        android:background="@color/background_material_light" />

</LinearLayout>
